{
    "name": "thunder",
    "displayName": "Thunder",
    "description": "Type quickly and freely.",
    "publisher": "Kenomaru",
    "version": "0.1.0",
    "galleryBanner": {
        "color": "#111111",
        "theme": "dark"
    },
    "icon": "./res/icon.png",
    "license": "For licensing see LICENSE",
    "author": {
        "email": "kenomaru@hotmail.it",
        "name": "Kennedy Tochukwu Ekeoha"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Thunder Settings",
            "properties": {
                "thunder.debugmode" : {
                    "type" : "boolean",
                    "default" : false,
                    "description": "Enables debug information logging."
                },
                "thunder.maxInterval": {
                    "type": "number",
                    "default": 300,
                    "exclusiveMinimum": 0,
                    "description": "The maximum temporal distance between two typings of a tracked character to still trigger a replacement."
                },
                "thunder.mappings": {
                    "type": "array",
                    "default": [
                        [
                            "1",
                            "!"
                        ],
                        [
                            "2",
                            "\""
                        ],
                        [
                            ",",
                            ";"
                        ],
                        [
                            "<",
                            ">"
                        ],
                        [
                            ".",
                            ":"
                        ],
                        [
                            "Ã¨",
                            "{"
                        ],
                        [
                            "+",
                            "}"
                        ],
                        [
                            "8",
                            "("
                        ],
                        [
                            "9",
                            ")"
                        ],
                        [
                            "o",
                            "["
                        ],
                        [
                            "p",
                            "]"
                        ]
                    ],
                    "description": ""
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xenoken/Thunder.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "applicationinsights": "^1.0.8",
        "vscode-extension-telemetry": "^0.1.0"
    }
}
