{
    "name": "thunder",
    "displayName": "Thunder",
    "description": "Type quickly. Type freely.",
    "publisher": "Kenomaru",
    "version": "0.1.4",
    "galleryBanner": {
        "color": "#111111",
        "theme": "dark"
    },
    "icon": "res/icon.png",
    "license": "For licensing see LICENSE",
    "author": {
        "email": "kenomaru@hotmail.it",
        "name": "Kennedy Tochukwu Ekeoha"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Thunder",
            "properties": {
                "thunder.debugMode": {
                    "title": "Debug Mode",
                    "type": "boolean",
                    "default": false,
                    "description": "Enables debug information logging."
                },
                "thunder.maxInterval": {
                    "title": "Max Interval",
                    "type": "number",
                    "default": 140,
                    "exclusiveMinimum": 0,
                    "description": "The maximum temporal distance between two typings of a tracked character to still trigger a replacement."
                },
                "thunder.mappings": {
                    "title": "Mappings",
                    "type": "object",
                    "default": {
                        "common": {
                            "1": "!",
                            "2": "\"",
                            ",": ";",
                            "<": ">",
                            ".": ":",
                            "Ã¨": "{",
                            "+": "}",
                            "8": "(",
                            "9": ")",
                            "o": "[",
                            "p": "]",
                            "7": "/"

                        },
                        "php" : {
                            "-" :  "->",
                            "4" :  "$",
                            "." :  "::",
                            "6" :   "&"
                        },
                        "markdown" : {
                            "3" : "#"                          
                        }
                       
                    },
                    "description": ""
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xenoken/Thunder.git"
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "typescript": "^2.6.1",
        "vscode": "^1.1.34"
    },
    "dependencies": {}
}